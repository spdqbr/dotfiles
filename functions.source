# List memory usage with PID and command line
function psmem {
  ps aux"$1"  | awk '{ s = ""; for (i = 11; i <= NF; i++) s = s $i " "; print $2 "\t" $6/1024 " MB\t\t" s}'  | sort -n -k2
}

