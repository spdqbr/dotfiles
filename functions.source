waitfor() {
  local wait
  wait=10
  if [[ $# -eq 1 ]]; then
    wait=$1
  fi
  false 2> /dev/null
  while [[ $? -ne 0 ]]; do 
    sleep "$wait" 
    $(fc -ln -1)
  done
}
